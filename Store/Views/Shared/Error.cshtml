@model IEnumerable<string>
@{
    ViewBag.Title = "Error";
}
<br />
<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Oops, what's happened...
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: Finded errors:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("OK", "List", "Product", new { Page = 1 }, new { @class = "btn btn-default" })